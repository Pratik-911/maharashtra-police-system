        }
        
        this.showLocationError(errorMessage);
    }
    
    updateLocationStatus(message, type) {
        const statusDiv = document.getElementById('locationStatus');
        const statusText = document.getElementById('locationStatusText');
        
        statusDiv.className = `location-status alert alert-${type}`;
        statusText.innerHTML = `<i class="fas fa-${this.getStatusIcon(type)} me-2"></i>${message}`;
    }
    
    getStatusIcon(type) {
        switch (type) {
            case 'success': return 'check-circle';
            case 'danger': return 'exclamation-triangle';
            case 'warning': return 'exclamation-circle';
            default: return 'info-circle';
        }
    }
    
    showLocationError(message) {
        this.updateLocationStatus(message, 'danger');
    }
    
    updateLocationStats() {
        document.getElementById('locationCount').textContent = this.locationCount;
        document.getElementById('lastUpdate').textContent = 
            this.lastLocationTime ? this.lastLocationTime.toLocaleTimeString() : 'Never';
    }
    
    handleAppBackground() {
        // App went to background - location tracking continues natively
        console.log('üì± App backgrounded - native location tracking continues');
    }
    
    handleAppForeground() {
        // App came to foreground - sync any queued data
        console.log('üì± App foregrounded - syncing queued data');
        this.syncQueuedLocations();
    }
    
    async syncQueuedLocations() {
        try {
            const queuedLocations = await window.CapacitorPlugins.storage.get('queued_locations') || [];
            
            if (queuedLocations.length === 0) {
                return;
            }
            
            console.log(`üîÑ Syncing ${queuedLocations.length} queued locations...`);
            
            for (const location of queuedLocations) {
                try {
                    await this.sendLocationToServer(
                        location.latitude,
                        location.longitude,
                        location.timestamp
                    );
                } catch (error) {
                    console.error('Failed to sync location:', error);
                }
            }
            
            // Clear synced locations
            await window.CapacitorPlugins.storage.remove('queued_locations');
            console.log('‚úÖ Queued locations synced');
            
        } catch (error) {
            console.error('‚ùå Sync queued locations error:', error);
        }
    }
    
    updateComplianceDisplay() {
        // Update compliance section with current data
        const compliancePercentage = document.getElementById('compliancePercentage');
        const totalLogs = document.getElementById('totalLogs');
        const compliantLogs = document.getElementById('compliantLogs');
        
        if (this.activeDuty && this.activeDuty.compliance) {
            const compliance = this.activeDuty.compliance;
            const percentage = compliance.total_logs > 0 ? 
                Math.round((compliance.compliant_logs / compliance.total_logs) * 100) : 0;
            
            if (compliancePercentage) {
                compliancePercentage.textContent = `${percentage}%`;
                compliancePercentage.style.color = percentage >= 80 ? 'var(--success-green)' : 
                    percentage >= 60 ? 'var(--warning-orange)' : 'var(--danger-red)';
            }
            if (totalLogs) totalLogs.textContent = compliance.total_logs || 0;
            if (compliantLogs) compliantLogs.textContent = compliance.compliant_logs || 0;
        } else {
            // Default values when no compliance data
            if (compliancePercentage) {
                compliancePercentage.textContent = '---%';
                compliancePercentage.style.color = 'var(--gray-600)';
            }
            if (totalLogs) totalLogs.textContent = this.locationUpdateCount || 0;
            if (compliantLogs) compliantLogs.textContent = '0';
        }
    }
    
    updateLocationTrackingUI() {
        // Update location tracking UI elements
        const locationCount = document.getElementById('locationCount');
        const lastUpdate = document.getElementById('lastUpdate');
