        if (this.activeDuty) {
            // Update duty information display
            const dutyDetails = document.getElementById('dutyDetails');
            const dutyLocation = document.getElementById('dutyLocation');
            const dutyShift = document.getElementById('dutyShift');
            const dutyStartTime = document.getElementById('dutyStartTime');
            const dutyEndTime = document.getElementById('dutyEndTime');
            const activeDutyCard = document.getElementById('activeDutyCard');
            const noDutyCard = document.getElementById('noDutyCard');
            
            if (dutyDetails) dutyDetails.textContent = `${this.activeDuty.point_name} - ${new Date().toLocaleDateString('mr-IN')}`;
            if (dutyLocation) dutyLocation.textContent = this.activeDuty.point_name || 'N/A';
            if (dutyShift) dutyShift.textContent = this.activeDuty.shift_type || 'Day';
            if (dutyStartTime) dutyStartTime.textContent = this.activeDuty.start_time || '--:--';
            if (dutyEndTime) dutyEndTime.textContent = this.activeDuty.end_time || '--:--';
            if (activeDutyCard) activeDutyCard.style.display = 'block';
            if (noDutyCard) noDutyCard.style.display = 'none';
        } else {
            // Update duty information display
            const dutyDetails = document.getElementById('dutyDetails');
            const dutyLocation = document.getElementById('dutyLocation');
            const dutyShift = document.getElementById('dutyShift');
            const dutyStartTime = document.getElementById('dutyStartTime');
            const dutyEndTime = document.getElementById('dutyEndTime');
            const activeDutyCard = document.getElementById('activeDutyCard');
            const noDutyCard = document.getElementById('noDutyCard');
            
            if (activeDutyCard) activeDutyCard.style.display = 'none';
            if (noDutyCard) noDutyCard.style.display = 'block';
        }
    }
    
